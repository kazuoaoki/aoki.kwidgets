<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:extend-macro="context/main_template/macros/master"
      metal:define-macro="master"      
      i18n:domain="plone">

    <body>
         <div id="content-core" metal:fill-slot="main">
                <form action="@@teste_request" method="post">
                    <p>
                      <label for="amount">Minimum number of bedrooms:</label>
                      <input type="text" name="amount" id="amount" style="border:0; color:#f6931f; font-weight:bold;">
                    </p>
                    <div id="slider-range-max"></div>
                    <!-- span tal:content="view/teste" / -->
                    <input type="submit" />
                </form>
              <script>
              $(function() {
                $( "#slider-range-max" ).slider({
                  range: "max",
                  min: 1,
                  max: 10,
                  value: 2,
                  slide: function( event, ui ) {
                    $( "#amount" ).val( ui.value );
                  }
                });
                $( "#amount" ).val( $( "#slider-range-max" ).slider( "value" ) );
              });
              </script>
  
      </div>
    </body>
